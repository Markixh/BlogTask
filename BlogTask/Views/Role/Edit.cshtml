@model BlogTask.Models.Role.EditViewModel;

@{
    ViewData["Title"] = "Редактирование роли";
}

<partial name="_ValidationScriptsPartial" />

@if (Model is not null)
{
    <div class="container my-1">
        <div class="p-1">

            <h3>Изменить роль</h3>

            <form method="post" asp-controller="Role" asp-action="Edit">
                <div class="mb-3">
                    <label for="Name" class="form-label">Название</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" asp-for="Name" class="form-control" id="Name">
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Описание роли</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <textarea type="text" asp-for="Description" class="form-control" id="Description"> </textarea>
                </div>
                <input type="text" asp-for="Id" hidden />
                <button type="submit" class="btn btn-success">Сохранить</button>
            </form>
        </div>
    </div>
}