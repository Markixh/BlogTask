@model BlogTask.Models.Role.EditViewModel;

@{
    ViewData["Title"] = "Редактирование роли";
}
@if (Model is not null)
{
    <div class="form">
        <h2>Редактирование роли</h2>
        <form method="post" asp-controller="Role" asp-action="Edit">
            <input type="text" asp-for="Name" placeholder="название">
            <textarea type="text" asp-for="Description" placeholder="описание"></textarea>
            <input type="text" asp-for="Id" hidden />
            <button>Сохранить</button>
        </form>
    </div>
}